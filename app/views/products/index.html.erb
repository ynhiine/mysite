<!-- Header -->
<header class=" text-white py-3 shadow-sm" id="header">
  <div class="container d-flex justify-content-between align-items-center">
    <h1 class="m-0 fw-bold" style="font-size: 1.5rem; color: #EE6457;">Yen Nhi Store</h1>
    <nav>
      <%= link_to "Home", root_path, class: "text-white text-decoration-none fw-bold me-3" %>
      <% if authenticated? %>
        <%= link_to "New Product", new_product_path, class: "text-white text-decoration-none fw-bold me-3" %>
      <% else %>
        <%= link_to "Login", new_session_path, class: "text-white text-decoration-none fw-bold" %>
      <% end %>
    </nav>
  </div>
</header>

<!-- Main Content -->
<main class="pt-5 mt-4" style="background-color: #FDF5F4; min-height: 100vh;">
  <div class="container py-5">
    <h1 class="text-center fw-bold mb-4" style="font-family: Arial, sans-serif;color:#EE6457">Product List</h1>

    <!-- New Product Button -->
    <% if authenticated? %>
      <div class="text-center mb-4">
        <%= link_to "New Product", new_product_path, class: "btn btn-warning px-4 py-2 fw-bold" %>
      </div>
    <% end %>

    <!-- Products Grid -->
    <div id="products" class="row g-4">
      <% @products.each do |product| %>
        <div class="col-lg-3 col-md-4 col-sm-6">
          <div class="card border-1 product-card">
            <div class="card-body text-center " >
              <h5 class="card-title">
                <%= link_to product.name, product, class: "stretched-link text-decoration-none text-dark fw-bold" %>
              </h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</main>

<!-- Footer -->
<footer class=" text-black py-3 text-center">
  <div class="container">
    <p class="mb-0">2025 On Thi Yen Nhi</p>
  </div>
</footer>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

